<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".EditProfileUser">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:text="แก้ไขข้อมูลส่วนตัว"
                android:textColor="@color/black"
                android:textSize="22dp"
                android:textStyle="bold"
                style="@style/FontBarterApp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="ปรับเปลี่ยนข้อมูลรายละเอียดของคุณ"
                android:textColor="@color/textsoftblack"
                style="@style/FontBarterApp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <View
                android:layout_width="120dp"
                android:layout_height="5dp"
                android:background="@color/purpleApp6"
                android:layout_weight="3"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            >

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/pic_profile"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/defaultpic"
                android:layout_gravity="center"
                app:civ_border_color="@color/white"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/nameText"
                android:fontFamily="@font/opun"
                style="@style/modifiedEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/surnameText"
                style="@style/modifiedEditText"
                android:fontFamily="@font/opun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Surname"
                android:maxLines="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/addressText"
                style="@style/modifiedEditText"
                android:fontFamily="@font/opun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:maxLines="1"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:gravity="center">


            <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                android:id="@+id/EditProfileBtn"
                style="@style/loginButton"
                android:fontFamily="@font/opun"
                android:layout_gravity="center_horizontal"
                android:text="แก้ไขโปรไฟล์  "
                app:initialCornerAngle="27dp"
                app:spinning_bar_color="#FFF"
                app:spinning_bar_padding="6dp"
                app:spinning_bar_width="4dp"

                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>