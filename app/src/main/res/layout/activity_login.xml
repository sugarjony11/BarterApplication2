<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:gravity="center"
                android:layout_marginTop="20dp"
                >


                <TextView
                    android:layout_width="198dp"
                    android:layout_height="192dp"
                    android:textColor="@color/TextAppColor"
                    android:fontFamily="@font/opun"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:paddingLeft="20dp"
                    android:text="แอปพลิเคชัน\nสำหรับแลกเปลี่ยน\nสิ่งของ"
                    android:textAlignment="gravity"
                    android:textStyle="bold"
                    />


                <ImageView
                    android:id="@+id/image"
                    android:layout_width="204dp"
                    android:layout_height="183dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/logo1" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ศูนย์รวมการแลกเปลี่ยนสิ่งของ\nที่พวกคุณสามารถนำของที่ไม่ใช้แล้วมาแลกเปลี่ยนกันได้"
                    android:fontFamily="@font/opun"
                    android:paddingLeft="170dp"
                    android:textSize="9dp"
                    android:gravity="center"
                    android:textColor="@color/TextAppColor"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/emailLogin"
                    android:background="@drawable/text_backg"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:hint="E-mail"

                    android:textSize="16dp"
                    android:fontFamily="@font/opun"
                    android:textColorHint="@color/white"
                    android:paddingStart="30dp"
                    android:textColor="@color/white"

                    />
                <!--                android:background="@drawable/text_corner"-->

            </LinearLayout>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:gravity="center"
                >

                <EditText
                    android:id="@+id/passwordLogin"
                    android:background="@drawable/text_backg"
                    android:layout_width="match_parent"
                    android:layout_height="?actionBarSize"
                    android:hint="Password"
                    android:textSize="16dp"
                    android:fontFamily="@font/opun"
                    android:textColorHint="@color/white"
                    android:imeOptions="actionDone"
                    android:inputType="textPassword"
                    android:paddingStart="30dp"

                    android:textColor="@color/white"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">

                <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                    android:id="@+id/LoginButton"
                    style="@style/loginButton"
                    android:layout_gravity="center_horizontal"
                    android:text="เข้าสู่ระบบ  "
                    android:fontFamily="@font/opun"
                    android:textSize="14dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:gravity="center">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_regis"
                    android:textColor="@color/TextAppColor"
                    android:textSize="13dp"
                    style="@style/FontBarterApp"/>

                <TextView
                    android:id="@+id/RegisButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/now_regis1"
                    android:textStyle="bold"
                    android:layout_marginLeft="5dp"
                    android:textColor="@color/TextAppColor"
                    android:textSize="13dp"
                    style="@style/FontBarterApp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</ScrollView>