<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <LinearLayout
        android:id="@+id/recycleLinear"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:padding="10dp"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/productCard1"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="@color/bg_cardview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="170dp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img_product1"
                        android:layout_width="130dp"
                        android:layout_height="140dp"
                        tools:srcCompat="@tools:sample/avatars"
                        android:padding="10dp"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginLeft="15dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/name_product1"
                            style="@style/FontBarterApp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:textSize="17dp"
                            android:textStyle="bold"
                            android:text="www"
                            android:textAppearance="@style/TextAppearance.AppCompat.Large"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="ลักษณะสินค้า: "
                                android:textSize="13dp"
                                android:fontFamily="@font/opun"
                                style="@style/TextAppearance.AppCompat.Large"
                                />
                            <TextView
                                android:id="@+id/hand_product1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:fontFamily="@font/opun"
                                style="@style/textstyle"
                                android:textSize="13dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opun"
                                android:text="คุณภาพสินค้า: "
                                android:textSize="13dp"
                                style="@style/TextAppearance.AppCompat.Large"/>
                            <TextView
                                android:id="@+id/percent_product1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                android:fontFamily="@font/opun"
                                style="@style/textstyle"
                                android:textSize="13dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="อายุการใช้งาน: "
                                android:fontFamily="@font/opun"
                                android:textSize="13dp"
                                style="@style/TextAppearance.AppCompat.Large"/>
                            <TextView
                                android:id="@+id/time_product1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text=" "
                                style="@style/textstyle"
                                android:fontFamily="@font/opun"
                                android:textSize="13dp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="5dp"
                            android:gravity="right"
                            android:layout_marginRight="20dp">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opun"
                                android:text="สถานะ : "
                                android:textColor="@color/TextAppColor"
                                android:textSize="11dp"
                                style="@style/TextAppearance.AppCompat.Large"/>
                            <TextView
                                android:id="@+id/state_product1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/opun"
                                android:text="มีของ "
                                style="@style/TextAppearance.AppCompat"
                                android:textSize="11dp"/>
                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>








</RelativeLayout>