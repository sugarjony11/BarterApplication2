<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OtherProfile"
    android:orientation="vertical"
    android:background="@color/white"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"

                >
                <ImageView
                    android:id="@+id/reportBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_report"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/bg1">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/pic_profile"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:src="@drawable/defaultpic"
                        android:layout_gravity="center"
                        app:civ_border_color="@color/white"
                        app:civ_border_width="7dp"
                        android:layout_marginTop="20dp"/>


                </LinearLayout>



                <TextView
                    android:id="@+id/nameBar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Jony Jo"
                    style="@style/FontBarterApp"
                    android:textSize="22dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    style="@style/FontBarterApp"
                    android:text="Bangkok"
                    android:textSize="18dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="20dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:weightSum="3"
                    >

                    <LinearLayout
                        android:id="@+id/layout_trad"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_marginTop="10dp">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_tread"/>
                        <TextView
                            android:id="@+id/count_tread"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/FontBarterApp"
                            android:text="0"
                            android:textSize="30dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="การแลกเปลี่ยน"
                            android:textSize="14dp"
                            style="@style/FontBarterApp"
                            android:layout_gravity="center"/>
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout_stock"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_stock"/>
                        <TextView
                            android:id="@+id/count_item"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            style="@style/FontBarterApp"
                            android:textSize="30dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="คลังสินค้า"
                            style="@style/FontBarterApp"
                            android:textSize="14dp"
                            />
                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/layout_comment"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_marginTop="10dp"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/ic_point"/>
                        <TextView
                            android:id="@+id/count_comment"
                            style="@style/FontBarterApp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="30dp"
                            />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="คะแนนเฉลี่ย"
                            android:textSize="14dp"
                            style="@style/FontBarterApp"
                            />
                    </LinearLayout>


                </LinearLayout>

                <!--            </androidx.cardview.widget.CardView>-->

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/stock_other"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#D3C1DD"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="คลังสินค้า"
                        style="@style/FontBarterApp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >
                <androidx.cardview.widget.CardView
                    android:id="@+id/stock_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardBackgroundColor="#D3C1DD"

                    >
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_height="?actionBarSize"
                        android:layout_centerVertical="true"
                        android:gravity="center"
                        android:text="ความคิดเห็น"
                        style="@style/FontBarterApp"
                        android:textStyle="bold"/>

                </androidx.cardview.widget.CardView>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>




</LinearLayout>