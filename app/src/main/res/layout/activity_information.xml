<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".InformationActivity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints"
        android:background="@color/white">
        <!--        android:background="@drawable/bg">-->
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"

                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right">
                    <ImageButton
                        android:id="@+id/favBtn"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_marginRight="30dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/ic_favorite"

                        />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="260dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    >

                    <ImageView
                        android:id="@+id/product_img"
                        android:layout_width="250dp"
                        android:layout_height="250dp"
                        android:layout_gravity="center"
                        android:padding="20dp"
                        tools:srcCompat="@tools:sample/avatars" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
               >
<!--                    android:background="@drawable/backg_design"-->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:id="@+id/name_product"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:lineSpacingMultiplier="1.25"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ชื่อสินค้า"
                            style="@style/FontBarterApp"
                            android:textColor="@color/TextAppColor"
                            android:textSize="22dp"
                            />
                        <TextView
                            android:id="@+id/categoryText"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textAlignment="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="ประเภทสินค้า"
                            style="@style/FontBarterApp"
                            />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="@color/bg_cardview"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_hand"/>
                                    <TextView
                                        android:id="@+id/typeText"
                                        android:layout_marginLeft="20dp"
                                        android:padding="10dp"
                                        android:textStyle="bold"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="ลักษณะสินค้า"
                                        style="@style/FontBarterApp"
                                        />

                                </LinearLayout>



                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="@color/bg_cardview"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_percent"/>
                                    <TextView
                                        android:id="@+id/perText"
                                        android:padding="10dp"
                                        android:layout_marginLeft="20dp"
                                        android:textStyle="bold"
                                        android:textAlignment="textStart"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text="สภาพสินค้า"
                                        style="@style/FontBarterApp"
                                        />

                                </LinearLayout>



                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="20dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="30dp"
                                android:layout_marginRight="30dp"
                                app:cardCornerRadius="15dp"
                                app:cardBackgroundColor="@color/bg_cardview"
                                >
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="40dp"
                                        android:layout_height="30dp"
                                        android:layout_marginLeft="20dp"
                                        android:layout_gravity="center"
                                        android:src="@drawable/ic_time"/>
                                    <TextView
                                        android:id="@+id/timeText"
                                        android:padding="10dp"
                                        android:layout_marginLeft="20dp"
                                        android:textStyle="bold"
                                        android:textAlignment="textStart"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:lineSpacingMultiplier="1.25"
                                        android:text="ระยะเวลาใช้งาน"
                                        style="@style/FontBarterApp"
                                        />

                                </LinearLayout>



                            </androidx.cardview.widget.CardView>
                        </LinearLayout>
<!--                        <TextView-->
<!--                            android:layout_marginTop="20dp"-->
<!--                            android:layout_marginLeft="20dp"-->
<!--                            android:textStyle="bold"-->
<!--                            android:textAlignment="textStart"-->
<!--                            android:layout_width="match_parent"-->
<!--                            android:layout_height="wrap_content"-->
<!--                            android:text="ข้อมูลสินค้า"-->
<!--                            android:textSize="25dp"-->
<!--                            style="@style/FontBarterApp"-->
<!--                            />-->
<!--                       -->



                        <TextView
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="50dp"
                            android:textStyle="bold"
                            android:textAlignment="textStart"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="คำอธิบาย"
                            android:textSize="20dp"
                            style="@style/FontBarterApp"
                            />

                        <TextView
                            android:id="@+id/detailText"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="70dp"
                            android:lineSpacingMultiplier="1.25"
                            android:padding="10dp"
                            android:text="บลาาาาาาาาาา"
                            android:textAlignment="textStart"
                            android:textStyle="bold"
                            style="@style/FontBarterApp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="12"
                        android:gravity="center"
                        android:layout_marginTop="30dp">

                        <View
                            android:layout_width="120dp"
                            android:layout_height="5dp"
                            android:background="@color/teal_700"
                            android:layout_weight="3"/>

                    </LinearLayout>


                    <LinearLayout
                        android:id="@+id/ownerproductLayoyt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="20dp"
                        android:orientation="vertical"
                        android:gravity="center">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/profile_ownerproduct"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/defaultpic"
                            android:layout_gravity="center"
                            app:civ_border_color="@color/white"
                            app:civ_border_width="5dp"
                            />
                        <TextView
                            android:id="@+id/name_ownerproduct"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="คุณประหยัด จันโอเช"
                            android:fontFamily="@font/opun"
                            android:textStyle="bold"
                            style="@style/TextAppearance.AppCompat.Large"
                            android:textSize="16dp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="20dp">
                        <br.com.simplepass.loading_button_lib.customViews.CircularProgressButton
                            android:id="@+id/offerBtn"
                            style="@style/loginButton"
                            android:layout_gravity="center_horizontal"
                            android:text="ยื่นข้อเสนอ"
                            android:textSize="14dp"
                            android:fontFamily="@font/opun"
                            app:initialCornerAngle="27dp"
                            app:spinning_bar_color="#FFF"
                            app:spinning_bar_padding="6dp"
                            app:spinning_bar_width="4dp" />
                    </LinearLayout>





                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>