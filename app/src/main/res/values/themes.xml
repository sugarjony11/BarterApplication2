<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.System_Home" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="fontFamily">@font/opun</item>
        <item name="android:textSize">15dp</item>
        <item name="colorPrimary">#2B2A2D</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purpleApp2</item>
        <!-- Customize your theme here. -->
    </style>

<!--    <style name="Theme.System_Home" parent="Base.Theme.AppCompat.Light.DarkActionBar">-->
    <style name="fontlabel" parent="Base.Theme.AppCompat.Light">
        <item name="fontFamily">@font/itimregular</item>
        <item name="android:textSize">15dp</item>

    </style>



    <style name="viewParent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="viewParent.headerText">
        <item name="android:textColor">@color/contentTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="parent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>

    </style>

    <style name="modifiedEditText" parent="parent">
        <item name="android:backgroundTint">@color/primaryTextColor</item>
    </style>

    <style name="loginButton" parent="viewParent">
        <item name="android:background">@drawable/buttom_backg</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>


    </style>

    <style name="Button" parent="viewParent">
        <item name="android:background">@drawable/buttom_bg</item>
        <item name="android:textColor">@color/whiteTextColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonDeleteProduct" parent="viewParent">
        <item name="android:background">@drawable/buttom_backg1</item>
        <item name="android:textColor">@color/TextAppColor</item>
        <item name="android:textStyle">bold</item>
    </style>


    <style name="textstyle" parent="viewParent">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">#6C2F72</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.System_Home.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.System_Home.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.System_Home.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="CustomRadioTheme" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:colorControlNormal">#CDB3D4</item>
        <item name="android:colorControlActivated">#FFBE88</item>
        <item name="android:colorControlHighlight">#E7B7C8</item>
    </style>



    <!--  **************** font  **************** -->
    <style name="FontBarterApp">
        <item name="android:fontFamily">@font/opun</item>
    </style>
</resources>